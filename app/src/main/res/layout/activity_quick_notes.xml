<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fdfcdc"
    android:visibility="visible"
    tools:context=".QuickNotes"
    tools:visibility="visible">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fdfcdc"
        android:visibility="visible"
        tools:context=".QuickNotes"
        tools:visibility="visible">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fdfcdc"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:context=".QuickNotes"
            tools:visibility="visible">

            <EditText
                android:id="@+id/editTextNote"
                android:layout_width="405dp"
                android:layout_height="132dp"
                android:layout_marginStart="3dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="15dp"
                android:background="#FFFFFF"
                android:ems="10"
                android:hint="...I need to remember..."
                android:includeFontPadding="true"
                android:inputType="textPersonName"
                android:isScrollContainer="false"
                android:saveEnabled="true"
                android:textColor="#000000"
                android:textSize="20sp"
                android:visibility="visible"
                app:layout_constraintBottom_toTopOf="@+id/Button0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                tools:visibility="visible" />

            <Button
                android:id="@+id/Button0"
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:layout_marginStart="145dp"
                android:layout_marginTop="21dp"
                android:layout_marginEnd="146dp"
                android:layout_marginBottom="15dp"
                android:background="#3F51B5"
                android:text="Add"
                android:textColor="#CFD8DC"
                app:layout_constraintBottom_toTopOf="@+id/QuickNoteDisplay"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextNote" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="425dp"
                android:layout_height="59dp"
                android:background="#00BCD4"
                android:text="Quick Notes!"
                android:textAlignment="center"
                android:textSize="40sp"
                android:textStyle="bold"
                android:visibility="visible"
                app:layout_constraintBottom_toTopOf="@+id/editTextNote"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/QuickNoteDisplay"
                android:layout_width="402dp"
                android:layout_height="287dp"
                android:layout_marginStart="3dp"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="6dp"
                android:layout_marginBottom="103dp"
                android:background="#FFCFCF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Button0" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>