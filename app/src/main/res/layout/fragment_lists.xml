<?xml version="1.0" encoding="utf-8"?>
<!--Lists Main Page containing Created Lists-->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFCDC"
    tools:context=".ui.fragments.ListsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="136dp"
            android:text="My Lists"
            android:textSize="35dp"
            android:textColor="#00AFB9"/>

        <Button
            android:id="@+id/create_list_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="284dp"
            android:layout_marginEnd="157dp"
            android:backgroundTint="#00AFB9"
            android:elevation="20dp"
            android:radius="5dp"
            android:text="+"
            android:textSize="34sp" />

    </RelativeLayout>

</FrameLayout>